<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                              http://maven.apache.org/xsd/settings-1.0.0.xsd">
  <activeProfiles>
    <activeProfile>github-packages</activeProfile>
  </activeProfiles>
  <profiles>
    <profile>
      <id>github-packages</id>
      <repositories>
        <!-- general dependencies - explicitly set for efficiency reasons -->
        <repository>
          <id>central</id>
          <url>https://repo1.maven.org/maven2</url>
        </repository>
        <!-- dependencies -->
        <repository>
          <id>pth_03</id>
          <url>https://maven.pkg.github.com/teragrep/pth_03</url>
        </repository>
        <repository>
          <id>jue_01</id>
          <url>https://maven.pkg.github.com/teragrep/jue_01</url>
        </repository>
        <repository>
          <id>rlo_06</id>
          <url>https://maven.pkg.github.com/teragrep/rlo_06</url>
        </repository>
        <repository>
          <id>pth_06</id>
          <url>https://maven.pkg.github.com/teragrep/pth_06</url>
        </repository>
        <repository>
          <id>dpf_02</id>
          <url>https://maven.pkg.github.com/teragrep/dpf_02</url>
        </repository>
        <repository>
          <id>dpf_03</id>
          <url>https://maven.pkg.github.com/teragrep/dpf_03</url>
        </repository>
      </repositories>
    </profile>
  </profiles>
  <servers>
    <!-- private dependencies -->
    <server>
      <id>pth_03</id>
      <username>${env.SRV_CI_USER}</username>
      <password>${env.SRV_CI_TOKEN}</password>
    </server>
    <!-- public dependencies -->
    <server>
      <id>jue_01</id>
      <username>${env.GITHUB_ACTOR}</username>
      <password>${env.GITHUB_TOKEN}</password>
    </server>
    <server>
      <id>rlo_06</id>
      <username>${env.GITHUB_ACTOR}</username>
      <password>${env.GITHUB_TOKEN}</password>
    </server>
    <server>
      <id>pth_06</id>
      <username>${env.GITHUB_ACTOR}</username>
      <password>${env.GITHUB_TOKEN}</password>
    </server>
    <server>
      <id>dpf_02</id>
      <username>${env.GITHUB_ACTOR}</username>
      <password>${env.GITHUB_TOKEN}</password>
    </server>
    <server>
      <id>dpf_03</id>
      <username>${env.GITHUB_ACTOR}</username>
      <password>${env.GITHUB_TOKEN}</password>
    </server>
    <!-- for uploading -->
    <server>
      <id>github</id>
      <username>${env.GITHUB_ACTOR}</username>
      <password>${env.GITHUB_TOKEN}</password>
    </server>
  </servers>
</settings>
